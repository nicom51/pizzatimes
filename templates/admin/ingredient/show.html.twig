{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

<div class="container rounded-2 shadow-lg" style="background-color: #ffad72">
    <table class="table" style="background-color: #ffad72">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>
                    {% set totalPrice = ingredient.price / 100 %}
                    {{ totalPrice|number_format(2) }}
                </td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ ingredient.createdAt ? ingredient.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_ingredient_index') }}" class="btn btn-success m-5" type="button">Retour à la liste</a>

    <a href="{{ path('app_admin_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-success m-5" type="button">editer</a>

    {{ include('admin/ingredient/_delete_form.html.twig') }}
</div>
{% endblock %}
