{% extends 'base.html.twig' %}

{% block title %}Pizza{% endblock %}

{% block body %}
    <h1>Pizza</h1>

<div class="container rounded-2 shadow-lg" style="background-color: #ffad72">
    <table class="table" style="background-color: #ffad72">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pizza.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    {% if pizza.photo %}
                        <img src="{{ asset('assets/uploads/' ~ pizza.photo) }}">
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ pizza.createdAt ? pizza.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_pizza_index') }}" class="btn btn-success m-5" type="button">Retour à la liste</a>

    <a href="{{ path('app_admin_pizza_edit', {'id': pizza.id}) }}" class="btn btn-success m-5" type="button">editer</a>

    {{ include('admin/pizza/_delete_form.html.twig') }}
</div>
{% endblock %}
